{
  // Bar placement + DPI scale
  "layer": "top",
  "position": "top",
  "height": 30,
  "margin-top": 0,
  "margin-left": 8,
  "margin-right": 8,
  "spacing": 6,

  // One bar across your primary output (set to your real output if needed)
  // "output": ["DP-1"],

  "modules-left": [
    "hyprland/workspaces"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    "cpu",
    "memory",
    "temperature",
    "network",
    "custom/adguardvpn",
    "battery"
  ],

  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "default": "ï„Œ",   // nf-fa-circle-thin
      "active": "ï„‘",    // nf-fa-circle
      "urgent": "ïª"     // nf-fa-exclamation-circle
    },
    "on-click": "hyprctl dispatch workspace {id}",
    "all-outputs": true,
    "disable-scroll": false
  },

  "clock": {
    "interval": 1,
    "format": "{:%m/%d  %H:%M}",
    "tooltip": true,
    "tooltip-format": "{:%Y-%m-%d %A}\nWeek %V",
    // Opens a lightweight calendar (gsimplecal). Install: sudo pacman -S gsimplecal
    "on-click": "gsimplecal"
  },

  "cpu": {
    "interval": 1,
    "format": "ï‹› {usage:>2}%",
    "format-alt": "{usage_graph}",
    "tooltip": true
  },
  "memory": {
    "format": "ïƒ‰ {used:0.1f}G / {total:0.1f}G",
    "tooltip-format": "{used:0.1f}G / {total:0.1f}G",
    "interval": 3,
    "tooltip": true
  },
  "temperature": {
    "critical-threshold": 85,
    "format": "ï‹‡ {temperatureC}Â°C",
    "hwmon-path": "/sys/class/thermal", // leave generic; Waybar will pick first. See note below.
    "interval": 3
  },
  "custom/adguardvpn": {
    "exec": "~/.config/waybar/scripts/adguardvpn_status.sh",
    "return-type": "json",
    "interval": 5,
    "format": "{}",
    "on-click": "~/.config/waybar/scripts/adguardvpn_toggle.sh",
    "on-click-right": "notify-send 'AdGuard VPN' 'Refreshing statusâ€¦'; ~/.config/waybar/scripts/adguardvpn_status.sh --once && pkill -SIGRTMIN+10 waybar",
    "signal": 10,
    "tooltip": true
  },
  "battery": {
    "interval": 30,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "ðŸ”‹ {capacity}%",
    "format-charging": "âš¡ {capacity}%",
    "format-full": "âœ… {capacity}%",
    "tooltip": true,
    "tooltip-format": "{capacity}% â€“ {time}"
  },

  "network": {
    "interface": "wlan0",         // <-- change to your wireless or ethernet interface
    "format-wifi": "ðŸŒ {essid} ({signalStrength}%)",
    "format-ethernet": "ðŸ”— {ifname} {ipaddr}/{cidr}",
    "format-disconnected": "âŒ Disconnected",
    "tooltip": true,
    "tooltip-format-wifi": "{essid}\nSignal: {signalStrength}%\nIP: {ipaddr}",
    "tooltip-format-ethernet": "{ifname}\nIP: {ipaddr}/{cidr}"
  }
}

